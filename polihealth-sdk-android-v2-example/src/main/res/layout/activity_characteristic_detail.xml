<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_characteristic_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Characteristic UUID: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notify" />

    <Button
        android:id="@+id/btn_indicate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indicate" />

    <Button
        android:id="@+id/btn_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write" />

    <Button
        android:id="@+id/btn_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read" />

    <Button
        android:id="@+id/btn_write_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:padding="5dp"
        android:text="전화" />

    <Button
        android:id="@+id/btn_write_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:padding="5dp"
        android:text="문자" />

    <Button
        android:id="@+id/btn_write_call_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:padding="5dp"
        android:text="부재중" />

    <Button
        android:id="@+id/btn_write_kakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:padding="5dp"
        android:text="카카오" />


</LinearLayout>